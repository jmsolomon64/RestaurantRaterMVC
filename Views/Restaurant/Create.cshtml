@model RestaurantRaterMVC.Models.Restaurant.RestaurantCreate //route to find the model we'll be using
@{
    ViewData["Title"] = "Create A Restaurant";
}

<h1>Create A Restaurant</h1>
<hr>

@* Creates a form *@
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control">
                <span asp-validation-for="Location" ></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Create">
            </div>
            <div>
                <a asp-action="Index">Back To List</a>
            </div>
        </form>
    </div>
</div>

@* accesses script that executes validation functionality *@
@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}